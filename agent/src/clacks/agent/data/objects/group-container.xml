	<Object>
		<Name>GroupContainer</Name>
		<DisplayName>Groups</DisplayName>
		<Description>Organizational unit that can contain groups</Description>
		<BackendParameters>
			<Backend objectClasses="organizationalUnit" RDN="ou">LDAP</Backend>
		</BackendParameters>
		<Backend>LDAP</Backend>

		<BaseObject>true</BaseObject>
		<FixedRDN>ou=groups</FixedRDN>
		<Container>
			<Type>PosixGroup</Type>
			<Type>GroupOfNames</Type>
		</Container>
    <Find>
      <Aspect>
        <Tag>GroupContainer</Tag>
        <Keyword>Groups</Keyword>
        <Search>ou</Search>
        <Resolve filter="DN">manager</Resolve>
        <Result>
          <Map>
            <Source>ou</Source>
            <Destination>title</Destination>
          </Map>
        </Result>
      </Aspect>
