<?xml version="1.0" encoding="UTF-8"?>
<Objects xmlns="http://www.gonicus.de/Objects">
  <Object>
    <Name>TrustAccount</Name>
    <Description>A trust account extension</Description>
    <DisplayName>Trust account</DisplayName>
    <BackendParameters>
      <Backend objectClasses="trustAccount">LDAP</Backend>
    </BackendParameters>
    <Backend>LDAP</Backend>

    <Attributes>
      <Attribute>
        <Name>trustModel</Name>
        <Description>Access scheme</Description>
        <Type>String</Type>
        <Values>
          <Value>fullaccess</Value>
          <Value>byhost</Value>
        </Values>
        <Mandatory>true</Mandatory>
      </Attribute>
      <Attribute>
        <Name>accessTo</Name>
        <Description>Access to which servers user is allowed</Description>
        <Backend>LDAP</Backend>
        <Type>String</Type>
        <ReadOnly>false</ReadOnly>
        <MultiValue>true</MultiValue>
        <Validators>
          <Condition>
            <Name>IsValidHostName</Name>
          </Condition>
        </Validators>
      </Attribute>
    </Attributes>

    <Extends>
      <Value>PosixGroup</Value>
      <Value>User</Value>
    </Extends>

    <BaseObject>false</BaseObject>
  </Object>
</Objects>



