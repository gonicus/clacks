<?xml version="1.0" encoding="UTF-8"?>
<Objects xmlns="http://www.gonicus.de/Objects" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.gonicus.de/Objects ../object.xsd ">
	<Object>
		<Name>InstalledDevice</Name>
		<Description>Object class for bundling installation recipes</Description>
		<DisplayName>InstalledDevice</DisplayName>
		<BackendParameters>
			<Backend objectClasses="installRecipe">LDAP</Backend>
		</BackendParameters>
		<Backend>LDAP</Backend>
		<Attributes>
			<Attribute>
				<Name>installTemplateDN</Name>
				<Description></Description>
				<Type>String</Type>
				<Validators>
					<Condition>
						<Name>IsExistingDN</Name>
					</Condition>
				</Validators>
			</Attribute>
			<Attribute>
				<Name>installNTPServer</Name>
				<Description></Description>
        <Type>String</Type>
        <Validators>
          <Condition>
            <Name>IsValidHostName</Name>
          </Condition>
        </Validators>
      </Attribute>
      <Attribute>
        <Name>installRootEnabled</Name>
        <Description></Description>
        <Type>Boolean</Type>
      </Attribute>
      <Attribute>
        <Name>installRootPasswordHash</Name>
        <Description></Description>
        <Type>UnicodeString</Type>
      </Attribute>
      <Attribute>
        <Name>installKeyboardlayout</Name>
        <Description></Description>
        <Type>String</Type>
      </Attribute>
      <Attribute>
        <Name>installSystemLocale</Name>
        <Description></Description>
        <Type>String</Type>
      </Attribute>
      <Attribute>
        <Name>installTimezone</Name>
        <Description></Description>
        <Type>String</Type>
      </Attribute>
      <Attribute>
        <Name>installMirrorDN</Name>
        <Description></Description>
        <Type>String</Type>
      </Attribute>
      <Attribute>
        <Name>installTimeUTC</Name>
        <Description></Description>
        <Type>String</Type>
      </Attribute>
      <Attribute>
        <Name>installMirrorPoolDN</Name>
        <Description></Description>
        <Type>String</Type>
      </Attribute>
      <!--
      <Attribute>
        <Name>installPartitionTable</Name>
        <Description></Description>
        <Type>DevicePartitionTableType</Type>
        <BackendType>UnicodeString</BackendType>
      </Attribute>
      -->
      <Attribute>
        <Name>installRecipeDN</Name>
        <Description></Description>
        <Type>String</Type>
      </Attribute>
      <Attribute>
        <Name>installRelease</Name>
        <Description></Description>
        <Type>String</Type>
      </Attribute>
    </Attributes>
    <Extends>
      <Value>Device</Value>
    </Extends>
    <BaseObject>false</BaseObject>
  </Object>
</Objects>
