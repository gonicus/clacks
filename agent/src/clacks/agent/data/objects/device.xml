<?xml version="1.0" encoding="UTF-8"?>
<Objects xmlns="http://www.gonicus.de/Objects">
	<Object>
		<Name>Device</Name>
		<Description>A GOsa device</Description>
		<DisplayName>Device</DisplayName>
		<BackendParameters>
			<Backend objectClasses="registeredDevice,device"
				RDN="cn">LDAP</Backend>
		</BackendParameters>
		<Backend>LDAP</Backend>
		<Attributes>
                        <Attribute>
                                <Name>cn</Name>
                                <Description>Common Name</Description>
                                <Type>UnicodeString</Type>
                                <MultiValue>false</MultiValue>
                                <Mandatory>true</Mandatory>
				<Validators>
				    <Condition>
					<Name>IsValidHostName</Name>
				    </Condition>
				</Validators>
			</Attribute>
                        <Attribute>
                                <Name>manager</Name>
                                <Description></Description>
                                <Type>String</Type>
                                <Mandatory>true</Mandatory>
				<Validators>
				    <Condition>
					<Name>IsExistingDnOfType</Name>
					<Param>User</Param>
				    </Condition>
				</Validators>
                        </Attribute>
                        <Attribute>
                                <Name>deviceStatus</Name>
                                <Description></Description>
                                <Type>String</Type>
                                <Mandatory>true</Mandatory>
                        </Attribute>
                        <Attribute>
                                <Name>deviceType</Name>
                                <Description></Description>
                                <Type>String</Type>
                                <Mandatory>true</Mandatory>
                        </Attribute>
                        <Attribute>
                                <Name>deviceUUID</Name>
                                <Description></Description>
                                <Type>String</Type>
                                <Mandatory>true</Mandatory>
                        </Attribute>
                </Attributes>
		<BaseObject>true</BaseObject>
	</Object>
</Objects>

