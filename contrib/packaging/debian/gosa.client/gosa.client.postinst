#!/bin/sh

set -e

case "$1" in
  configure)
    if ! getent passwd gosa >/dev/null; then
      adduser --disabled-password  --quiet --system \
        --home /var/lib/gosa \
        --gecos "GOsa daemon account" --group gosa
    fi
  ;;
  abort-upgrade|abort-remove|abort-deconfigure)
  ;;
  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
  ;;
esac

#DEBHELPER#

if [ -x "/etc/init.d/gosa.client" ]; then
        update-rc.d gosa.client defaults >/dev/null
        if [ -x "`which invoke-rc.d 2>/dev/null`" ]; then
                invoke-rc.d gosa.client start || exit $?
        else
                /etc/init.d/gosa.client start || exit $?
        fi
fi
