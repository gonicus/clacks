#!/bin/sh

set -e

#DEBHELPER#

if [ "$1" = "purge" ] ; then
    deluser --quiet --system gosa-client > /dev/null || true
    delgroup --quiet --system gosa-client > /dev/null || true

    f=/var/run/gosa-client
    if [ -d "$f" ]; then
        rmdir "$f" || { chown root:root "$f" && chmod 00700 "$f"; }
    fi
fi
